.numbers
	margin: 0
	font-family: 'Fredoka One', cursive
	font-size: 10rem
	font-weight: bold
	-webkit-text-stroke-width: 3px

	&Yellow
		-webkit-text-stroke-color: #e0f309
		-webkit-text-fill-color: #f29502
		text-shadow: 10px 7px #e0f309
	&Blue
		-webkit-text-fill-color: #2062e6
		-webkit-text-stroke-color: #86B3E6
		text-shadow: 10px 7px #86B3E6
	&Green
		-webkit-text-fill-color: #97ed70
		-webkit-text-stroke-color: #02f213
		text-shadow: 10px 7px #02f213
	&Purple
		-webkit-text-fill-color: #ac6aea
		-webkit-text-stroke-color: #b735f4
		text-shadow: 10px 7px #b735f4
	&Pink
		-webkit-text-fill-color: #f88c8c
		-webkit-text-stroke-color: #f94b4b
		text-shadow: 10px 7px #f94b4b
	&Olive
		-webkit-text-fill-color: #fcf367
		-webkit-text-stroke-color: #969b01
		text-shadow: 10px 7px #969b01
		
.backs
	&Yellow
		-webkit-box-shadow: inset 0 0 10px orange
		box-shadow:inset 0 0 10px orange
		background-color:#FFD2A7
		&:hover
			background-color:#FFF1E5
	&Blue
		-webkit-box-shadow inset 0 0 10px blue
		box-shadow inset 0 0 10px blue
		background-color #BADCEC
		&:hover
			background-color:#E4F3FB
	&Green
		-webkit-box-shadow: inset 0 0 10px green
		box-shadow:inset 0 0 10px green
		background-color:#CCF5C6
		&:hover
			background-color:#ECFDE9
	&Purple
		-webkit-box-shadow: inset 0 0 10px purple
		box-shadow:inset 0 0 10px purple
		background-color:#E2BDE6
		&:hover
			background-color:#F6E5F8
	&Pink
		-webkit-box-shadow: inset 0 0 10px #B14949
		box-shadow:inset 0 0 10px #B14949
		background-color:#FFD9D9
		&:hover
			background-color:#FFEFEF
	&Olive
		-webkit-box-shadow: inset 0 0 10px olive
		box-shadow:inset 0 0 10px olive
		background-color:#FFFBB7
		&:hover
			background-color:#FFFEED
		




