template#consulQueryChildrenValid

	form#formValidChildren.validAct
		fieldset
			legend Validar Etapa
			article
				label Docente: 
				input#userUser.userR(type='text', name='userUser', value='#{user.userUser}', readonly)
			article#dataNameChild
			
			article
				label Resultado Sistema 
				input#scoreSystemActivity(type='text', name='scoreSystemActivity', value='0', readonly)
			
			article
				label Puntuación Docente 
				input#scoreTeachActivity(type='number', name='scoreTeachActivity', min='0', max='10', placeholder='Puntaje', required='')
			
			article
				label Estado de la Actividad 
				select#statusActivity(name='statusActivity')
					option(value='0', selected='') Pendiente
					option(value='1') Completada

			article
				label Apoyo Máximo 
				select#backingMaxActivity(name='backingMaxActivity')
					option(value='0', selected='') No Requiere
					option(value='1') L: Logrado
					option(value='2') LP: Logro Parcialmente Obtenido
					option(value='3') P: Planeado
			
			article
				label Apoyo Mínimo 
				select#backingMinActivity(name='backingMinActivity')
					option(value='0', selected='') No Requiere
					option(value='1') L: Logrado
					option(value='2') LP: Logro Parcialmente Obtenido
					option(value='3') P: Planeado
			
			article
				label D. Funcional 
				select#backingDFunctionActivity(name='backingDFunctionActivity')
					option(value='0', selected='') No Requiere
					option(value='1') L: Logrado
					option(value='2') LP: Logro Parcialmente Obtenido
					option(value='3') P: Planeado
			
			article
				textarea#observationActivity(name='observationActivity' placeholder='Observaciones...' required)
			
			article.validActButton
				button#buttonValidAct(type='button')
					span Validar

				button#buttonCancelValidAct(type='button')
					span Cancelar
