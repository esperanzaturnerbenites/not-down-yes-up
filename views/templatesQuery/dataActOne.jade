template#consulQueryDataActOne
	section.continue.continueDetailAct-consulStatusStep
		article.consulName
			p
				span
					b ETAPA 
				span #{childrenAct.stepActivity}
		article.consulTable
			table
				thead
					tr
						th ACTIVIDAD
						th PUNTAJE
						th ESTADO
						th OBSERVACIONES
						th DOCENTE
						th FECHA
				tbody
					for acts in childrenAct.activities
						if (acts.statusActivity == 0)
							- var status = "Pendiente"
						if (acts.statusActivity == 1)
							- var status = "Completado"
						tr
							td #{acts.idActivity.nameActivity}
							td #{acts.scoreTeachActivity}
							td #{status}
							td #{acts.observationActivity}
							td #{acts.idUser.nameUser} #{acts.idUser.lastnameUser}
							td #{acts.date}
