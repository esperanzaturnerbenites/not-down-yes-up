extends templates/template.jade
block title
  title Consultas en ¡No Down, Yes Up!
block exit
  h2.exit
    a(href='/admin/menu-admin') VOLVER
block content
  section.consul
    h3 ¿Qué deseas consultar?
    section.consulFlex
      section
        form#consulGeneral
          fieldset.consul.consulGeneral
            legend Consultas Generales
            label(for='consulG') Tipo de Consulta: 
            select#consulG(name='consulG')
              option(value='', disabled='', selected='') Escoge tu Consulta
              option(value='0') Listado General
              option(value='1') Listado por Edades y Etapas
              option(value='2') Listado por Resultados
      section
        form#consulChildren
          fieldset.consul.consulChildren
            legend Consultas por Nin@
            input#consulIdChildren(type='number', name='consulIdChildren', min='1111', placeholder='Número Identificación', required='')
            button.buttons(type='submit')
              span Confirmar Consulta
      section
        form#consulAvanced
          fieldset.consul.consulAvanced
            legend Consulta Avanzada
            article
              label(for='ageConsul') Edad en Meses: 
              select#consulAge(name='consulAge')
                option(value='No Validar', selected='') No Validar
                option(value='Mayor Que') Mayor Que
                option(value='Menor Que') Menor Que
                option(value='Entre') Entre
              label  Mes: 
              input#consulIdConsulAvanced(type='number', name='consulIdConsulAvanced', min='0', max='48', placeholder='Meses')
              label  Mes:
              input#consulIdConsulAvanced2(type='number', name='consulIdConsulAvanced2', min='0', max='48', placeholder='Meses')
            article
              label(for='stepConsul') Etapa: 
              select#consulStep(name='consulStep')
                option(value='No Validar', selected='') No Validar
                option(value='Etapa 1') Etapa 1
                option(value='Etapa 2') Etapa 2
                option(value='Etapa 3') Etapa 3
                option(value='Etapa 4') Etapa 4
            article
              label Cantidad de Actividades Completadas: 
              input#consulActCompleted(type='number', name='consulActCompleted', min='0', max='8', placeholder='Act')
            article
              label Cantidad de Actividades Pendientes: 
              input#consulActPending(type='number', name='consulActPending', min='0', max='8', placeholder='Act')
            button.buttons(type='submit')
              span Consultar
      section#buttons
        form
          fieldset.consul.buttons
            legend Imprimir/Exportar
            button(type='')
              span Imprimir
            button(type='')
              span Exportar PDF

    section#showResult
    include templatesQuery/children.jade
    include templatesQuery/general.jade
    include templatesQuery/ageStep.jade
    include templatesQuery/results.jade
    script(src="/js/reports.js")
