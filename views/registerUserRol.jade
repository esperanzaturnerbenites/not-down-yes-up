extends templates/template.jade
block title
  title Nuevo Usuario en ¡No Down, Yes Up!
block exit
  h2.exit 
    a(href='/admin/menu-admin') VOLVER
block content
  section.register
    h3 Nuevo Usuario
    article
      form#formValidUser
        fieldset.data.validChildren
          legend Digita la cédula
          article
            input#validUser(type='number', name='validUser', min='1111', placeholder='Cédula', required='')
          article
            button(type='submit')
              span Iniciar Registro
      
      form#formAddUser.hide
        fieldset.userAdd
          legend Nuevo Usuario
          section.data
            fieldset
              legend Personal
              article
                input#idUser(type='number', name='idUser', readonly)
                input#expeditionUser(type='text', name='expeditionUser', placeholder='Lugar de Expedición', required)
              article
                input#nameUser(type='text', name='nameUser', placeholder='Nombres', required='')
                input#lastnameUser(type='text', name='lastnameUser', placeholder='Apellidos', required='')
              article
                label(for='ageUser') Edad: 
                input#ageUser(type='number', name='ageUser', min='18', max='99', placeholder='Edad' required)
              article.img
                span Foto
                input#imgUser(type='file', name='imgUser', accept='image/*')
            fieldset
              legend Contacto
              article
                input#telUser(type='number', name='telUser', min='1111111', max='9999999', placeholder='Teléfono Fijo', required='')
                input#celUser(type='number', name='celUser', min='1111111111', max='9999999999', placeholder='Celular', required='')
                input#emailUser(type='email', name='emailUser', placeholder='correo-usuario@abc.com', required)
              article
                input#addressUser(type='text', name='addressUser', placeholder='Dirección', required='')
                input#districtUser(type='text', name='districtUser', placeholder='Barrio', required='')
                input#localityUser(type='text', name='localityUser', placeholder='Localidad')
                input#districtUser(type='text', name='municipalityUser', placeholder='Ciudad/Municipio', required='')
                input#departamentUser(type='text', name='departamentUser', placeholder='Departamento', required='')
            fieldset
              legend Profesión
              article
                label(for='studyUser') Nivel de Estudios: 
                select#studyUser(name='studyUser')
                  option(value='0', selected) Básica Primaria
                  option(value='1') Básica Secundaria
                  option(value='2') Bachiller
                  option(value='3') Técnico Profesional
                  option(value='4') Tecnólogo
                  option(value='5') Profesional
                  option(value='6') Especialización
                  option(value='7') Maestría
                  option(value='8') Doctorado
              input#professionUser(type='text', name='professionUser', placeholder='Título adquirido', required)
              label(for='experienceUser') Experiencia en meses: 
              input#experienceUser(type='number', name='experienceUser', min='0', max='999', placeholder='Experiencia en meses', required)
              article
              input#centerUser(type='text', name='centerUser', placeholder='Centro Zonal', required)
        
        fieldset.userAdmin.data.user
          legend Confirmar Registro
          section
            article
                label(for='typeUser') Tipo de usuario: 
                select#typeUser(name='typeUser')
                  option(value='0', selected) Administrador
                  option(value='1') Docente
            input#userUser(type='text', name='userUser', placeholder='Usuario', required)
            input#passUser(type='password', name='passUser', placeholder='Contraseña', required)
            input#passConfirmUser(type='password', name='passConfirmUser', placeholder='Repite Contraseña', required)
            button(type='submit')
              span Registrar
            button(type='reset')
              span Limpiar
            p.cancel
              a(href='/admin/menu-admin') Cancelar
  script(src="/js/app.js")