extends templates/template.jade
block title
	title Administración de Usuarios en ¡No Down, Yes Up!
block exit
	button
		a(href='/admin/menu-admin') VOLVER
block content
	section.register
		h3 Administración de Usuarios
		article.data
			
			form#formOpeChildren
				fieldset
					legend General Niñ@s
					section
						input#adminInfoChildren(type='number', name='adminInfoChildren', min='1111', placeholder='Identificación Niñ@', required='')
						button(type='button')#formOpeChildrenInfo
							span Ver Info
						button(type='button')#formOpeChildrenUpd
							span Actualizar
						button(type='button')#formOpeChildrenDel
							span Eliminar

			form#formOpeStatusChildren
				fieldset
					legend Retirar Ñiñ@
					label *(Inactiva un/a niñ@)
					article
						input#adminUpdChildren(type='number', name='adminUpdChildren', min='1111', placeholder='Identificación Niñ@', required='')
					article
						textarea#observationChildren(name='observationChildren' placeholder='Observaciones...' required)
					article
						button(type='button')#formOpeChildrenStatusUpd
							span Retirar

			form#formOpeValidChildren
				fieldset
					legend Validar Estapa
					article
						select#step(name='step')
							option(value='1', selected='') Etapa 1
							option(value='2') Etapa 2
							option(value='3') Etapa 3
							option(value='4') Etapa 4

						input#idChildren(type='number', name='idChildren', min='1111', placeholder='Identificación Niñ@', required='')
					
						button#formValidChildrenValid(type='button')
							span Validar
		article#showResultValid
		include templatesQuery/validStep.jade
			
	script(src="/js/app.js")