//- Listado de Niñ@s
//- POST /reports/general

section.consul.consulQuery
	h3 Listado General Niñ@s
	section
		button(type="button")
			span Generar PDF
	article.consulTable
		table
			thead
				tr
					th ID
					th NOMBRES
					th APELLIDOS
					th EDAD
					th EPS
					th ESTADO
					th ESTADO CURSOS
					th FECHA REGISTRO
			tbody
				each children in data
					if (children.statusChildren == 0)
						-var statusChildren = "ACTIVO"
					if (children.statusChildren == 1)
						-var statusChildren = "INACTIVO"

					if (children.statusChildrenEstimulation == 0)
						-var statusChildrenEstimulation = "Registrado"
					if (children.statusChildrenEstimulation == 1)
						-var statusChildrenEstimulation = "En Cursos"
					if (children.statusChildrenEstimulation == 2)
						-var statusChildrenEstimulation = "Calificado"
					if (children.statusChildrenEstimulation == 3)
						-var statusChildrenEstimulation = "Retirado"
					tr
						td
							a(href="/reports/info-children/#{children.idChildren}" target="blank") #{children.idChildren}
						td #{children.nameChildren}
						td #{children.lastnameChildren}
						td #{children.ageChildren}
						td #{children.epsChildren}
						td #{statusChildren}
						td #{statusChildrenEstimulation}
						td #{children.dateStart}
