extends templates/template.jade 
block title
	title Administración de Usuarios en ¡No Down, Yes Up!
block exit
	button
		a(href='/admin/menu-admin') VOLVER
block content
	section.register 
		h3 Administración de Usuarios
		article.data

			form#formFindAll
				fieldset
					legend Ver Usuarios
					article
						select#typeConsult(name='typeConsult')
							option(value='0', selected='') Administradores
							option(value='1') Docentes
							option(value='2') Activos
							option(value='3') Inactivos
							option(value='4') Todos
						button(type='submit')
							span Buscar

			form#formNewUser
				fieldset
					legend Nuevo Usuario del Sistema
					article
						input#idUser(type='number', name='idUser', min='1111', placeholder='Cédula Usuario', required data-valid-exists="user,false,true")
						input#userUser(type='text', name='userUser', placeholder='Nuevo Usuario', required data-valid-exists="adminuser,true,false")
					article
						label(for='typeUser') Tipo de usuario: 
						select#typeUser(name='typeUser')
							option(value='0', selected) Administrador
							option(value='1') Docente
					article
						input#passUser(type='password', name='passUser', placeholder='Contraseña', required='')
						input#newPassConfirmUser(type='password', name='newPassConfirmUser', placeholder='Repite Contraseña', required='')
						button(type='submit')
							span Crear
			
			form#formUpdatePass
				fieldset
					legend Actualizar Contraseña
					article
						input#adminIdUser(type='text', name='adminIdUser', placeholder='Usuario', required data-valid-exists="adminuser,false,true")
					article
						input#adminPassUser(type='password', name='adminPassUser', placeholder='Contraseña', required='')
						input#adminPassConfirmUser(type='password', name='adminPassConfirmUser', placeholder='Repite Contraseña', required='')
						button(type='submit')
							span Actualizar
			
			form#formOpeUserRol
				fieldset
					legend Actualizar Rol
					section
						input#adminRolIdUser(type='text', name='adminRolIdUser', placeholder='Usuario', required data-valid-exists="adminuser,false,true")
						select#rolUser(name='rolUser')
							option(value='0', selected='') Administrador
							option(value='1') Docente
						button#formOpeUserUpdSta(type='submit')
							span Actualizar
			
			form#formOpeUserStatus
				fieldset
					legend Actualizar Estado
					section
						input#adminStaIdUser(type='text', name='adminStaIdUser', placeholder='Usuario', required data-valid-exists="adminuser,false,true")
						select#statusUser(name='statusUser')
							option(value='0', selected='') Inactivo
							option(value='1') Activo
						button#formOpeUserUpdSta(type='submit')
							span Actualizar
			
			form#formOpeUser
				fieldset
					legend Eliminar Usuario Sistema
					section
						input#adminOpeIdUser(type='text', name='adminOpeIdUser', placeholder='Usuario', required data-valid-exists="adminuser,false,true")
						button#formOpeUserDel(type='submit')
							span Eliminar
			
			article#showResultTeachAdmin

	script(src="/js/administracionUsuarios.js")